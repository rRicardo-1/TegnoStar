@model TegnoStar.Models.ViewModels.HomeVM

@{
    ViewData["Title"] = "Pagina Principal";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>



<div class="fdprin">
    <div class="text-center">
        <img src="~/css/imagenes/bienvenido.png" id="imagen" />
    </div>
    <div class="text-center">
        
        <p>SISTEMA DE INVENTARIO TEGNOSTAR.</p>
    </div>

    <div class="text-center">
        <img src="~/css/imagenes/2.png" id="imagen" />
    </div>
</div>


  <div id="carouselExample" class="carousel slide">
      <div class="carousel-inner">
        @{
            int cont = 0;

        }

        @foreach (var item in Model.Slider)
        {
            var itemDinamico = cont++ == 0 ? "item active" : "item";

                        <div class="carousel-@itemDinamico" >
                        <img src="@Url.Content(item.ImageUrl)" class="d-block w-100">
                        <h2 class="text-white text-center bg-dark py-1">@Html.Raw(item.Nombre)</h2>
                    </div>
        }
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>





    <div class="row fondoTitulo mt-1">
        <div class="col-sm-12">
            <h1 class="text-center text-white bg-secondary py-1">Ultimos Productos Agregados</h1>
        </div>
    </div>
    

@if (Model.ListaProductos.Count() > 0)
{
                <hr />
                <div class="row">
        @foreach (var producto in Model.ListaProductos.OrderBy(o => o.IdProducto))
        {
                                <div class="col-4">
                                    <img src="@producto.UrlImagen" class="img-thumbnail" style= "width:100%">
                                    <div class="card-body">
                                        <h5 class="tex-center">@producto.Nombre</h5>
                                        <a asp-action="Detalle" class="btn btn-success" style="border-radius:2px" asp-route-id="@producto.IdProducto">
                                            Mas Informacion
                                        </a>
                                    </div>
                                </div>
        }
                </div>
}
else
{
                <p>No hay Articulos</p>
}








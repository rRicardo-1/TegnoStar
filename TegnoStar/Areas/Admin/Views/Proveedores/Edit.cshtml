@model TegnoStar.Models.Proveedor

@{
    ViewData["Title"] = "Editar Proveedor";
}

<br />
<br />
<h3 class="text-center">Editar Proveedor</h3>
<form method="POST" asp-action="Edit">
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdProveedor" />
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label>
                        <label asp-for="NombreEmpresa"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreEmpresa" class="form-control" placeholder="Ingrese el nombre dela empresa" />
                    <span asp-validation-for="NombreEmpresa" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label>
                        <label asp-for="NombreContacto"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="NombreContacto" class="form-control" placeholder="Ingrese el nombre contacto" />
                    <span asp-validation-for="NombreContacto" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label>
                        <label asp-for="Telefono"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Telefono" class="form-control" placeholder="Ingrese el teléfono" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label>
                        <label asp-for="CorreoElectronico"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="CorreoElectronico" class="form-control" placeholder="Ingrese el correo electrónico" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label>
                        <label asp-for="Direccion"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Direccion" class="form-control" placeholder="Ingrese la dirección" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label>
                        <label asp-for="acivo"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="acivo" class="form-cform-check-input" />@Html.DisplayNameFor(model=>model.acivo)
                </div>
            </div>


            <div class="form-group row">
            <div class="col">
            <button type="submit" class="btb btb-primary form-control" asp-route-id="@Model.IdProveedor">Actualizar</button>
            </div>

            <div class="col">
            <a asp-action="Index" class="btn btn-success form-control">Regresar</a>
            </div>
            </div>

        </div>
    </div>

</form>


                
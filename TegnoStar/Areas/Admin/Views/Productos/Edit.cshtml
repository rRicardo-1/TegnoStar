@model TegnoStar.Models.ViewModels.ProductosVM

@{
    ViewData["Title"] = "Editar Producto";
}

<br />
<br />
<h3 class="text-center">Editar Productos</h3>
<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Productos.IdProducto"/>
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label>
                        <label asp-for="Productos.Nombre"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Productos.Nombre" class="form-control" placeholder="Ingrese Nombre Del Producto" />
                    <span asp-validation-for="Productos.Nombre" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label>
                        <label asp-for="Productos.Descripcion"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Productos.Descripcion" class="form-control" placeholder="Ingrese Descrpcion De Producto" />
                    <span asp-validation-for="Productos.Descripcion" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label>
                        <label asp-for="Productos.Precio"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Productos.Precio" class="form-control" placeholder="Ingrese El Precio Del Producto" />
                    <span asp-validation-for="Productos.Precio" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label>
                        <label asp-for="Productos.Stock"></label>
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="Productos.Stock" class="form-control" placeholder="Ingrese El Stock Del Producto" />
                    <span asp-validation-for="Productos.Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label for="Categoría">Categoría</label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Productos.CategoriaId, Model.ListaCategorias,
                    "-Por favor seleccione una categoría-", new { @class = "form-control" })
                    <span asp-validation-for="Productos.CategoriaId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Productos.UrlImagen"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" multiple class="form-control" />
                    <span asp-validation-for="Productos.UrlImagen" class="text-danger"></span>
                </div>
            </div>


 <div class="form-group row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Productos.IdProducto">Actualizar</button>
                </div>

                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Regresar</a>
                </div>
            </div>

        </div>
    <div class="col-4 pt-3">
            <img src="@Model.Productos.UrlImagen" style="border-radius:5px; border:2px solid #bbb9b9; width:100%" />
    </div>
    </div>

</form>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Ventas";
}

<br />

<div class="container">
    <div class="row">
        <div class="col-12 text-right">
            <a asp-area="Admin" asp-action="Create" asp-controller="Ventas" class="btn btn-primary"><i class="fas fa-plus"></i>Crear Nueva Venta</a>
        </div>
    </div>

    <br />
    <br />
    <div class="table-responsive">
        <table id="TablaVentas" class="table table-hover table-dark" style="width:100%">
            <thead>
                <tr>
                    <td>Producto</td>
                    <td>Cliente</td>
                    <td>Cantidad</td>
                    <td>Precio</td>
                    <td>Total</td>
                    <td>Acciones</td>
                </tr>
            </thead>
        </table>
    </div>
</div>



<div class="modal fade " id="vistaVenta" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg " role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detalles Ventas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div id="cuerpoModalVentaProducto" class="col-sm-12 col-md-12 col-lg-6 col-xl-6">

                    </div>
               
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/js/VentasAdmin.js"></script>
}


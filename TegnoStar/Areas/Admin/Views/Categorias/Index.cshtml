
<div class="fondo">
    <div class="text-center">
        <img src="~/css/imagenes/ListaCategorias.png" id="imagen" />
    </div>


    <div class="container mt-4">

        <div class="row">
            <div class="col-8">
                <script src="https://cdn.lordicon.com/bhenfmcm.js"></script>
                <lord-icon src="https://cdn.lordicon.com/zncllhmn.json"
                           trigger="loop"
                           colors="primary:#ffffff"
                           state="hover"
                           style="width:70px;height:70px">
                </lord-icon>
            </div>
            <div class="col-4 text-right">
                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Crear nueva categoria</a>

            </div>

            @*PDF*@
            <form asp-area="Admin" asp-action="DescargarPDF" asp-controller="Categorias">
    <button class="btn btn-success" type="submit">Descargar PDF</button>
</form>

        </div>


        <table id="tblCategorias" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>IdCategoria</th>
                    <th>Nombre</th>
                    <th>Orden</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>


    </div>
</div>

@section Scripts{
    <script src="~/js/categoria.js"></script>
}
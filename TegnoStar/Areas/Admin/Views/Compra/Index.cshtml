@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <br />
<div class="fondo">
    <div class="text-center">
        <img src="~/css/imagenes/productlist.png" id="imagen" />
    </div>


    <div class="container mt-4">

        <div class="row">
            <div class="col-8">
                <script src="https://cdn.lordicon.com/bhenfmcm.js"></script>
                <lord-icon src="https://cdn.lordicon.com/zncllhmn.json"
                           trigger="loop"
                           colors="primary:#ffffff"
                           state="hover"
                           style="width:70px;height:70px">
                </lord-icon>
            </div>
            <div class="col-4 text-right">
                <a asp-area="Admin" asp-action="Create" asp-controller="Compra" class="btn btn-primary"><i class="fas fa-plus"></i>Crear Nueva Compra</a>

            </div>

        </div>


        <table id="tblCompra" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    
                    <th>Proveedor</th>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Total</th>
                </tr>
            </thead>
        </table>


    </div>
</div>


@*<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal2" data-target="#Detalle2">
    Launch demo modal
</button>*@

<!-- Modal -->
<div class="modal fade" id="vistaCompra" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" >
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detalles De Compra</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="cuerpoModalCompra">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/Compra.js"></script>
}